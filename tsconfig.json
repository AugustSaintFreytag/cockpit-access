{
	"compilerOptions": {
		// Target
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",

		// Options
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "types",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		// Rules
		"strict": true,

		// Dependencies
		"types": [
			"@types/node"
		],
		
		// Paths
		"outDir": "dist",
		"baseUrl": "src"
	},
	"exclude": ["node_modules*"]
}
