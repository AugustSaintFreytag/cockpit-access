{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"moduleResolution": "node",

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "types",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"strict": true,

		"types": [
			"@types/node"
		],
		
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"exclude": ["node_modules*"]
}