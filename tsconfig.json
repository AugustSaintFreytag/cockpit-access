{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",

		"sourceMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"strict": true,

		"types": [
			"@types/node"
		],
		
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"@/*": ["./*"]
		}
	},
	"exclude": [
		"node_modules*"
	]
}