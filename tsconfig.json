{
	"compilerOptions": {
		// Target
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",

		// Options
		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "types",

		// Rules
		"strict": true,
		
		// Paths
		"outDir": "./dist",
		"baseUrl": "./src",
		"paths": {
			"@/*": [
				"./*"
			]
		}
	},
	"exclude": ["node_modules*"]
}
