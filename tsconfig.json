{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",

		"sourceMap": true,
		"declaration": true,
		"declarationMap": true,
		"declarationDir": "dist/types",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,

		"strict": true,

		"types": [
			"@types/node"
		],
		
		"outDir": "dist",
		"baseUrl": "src",
		"paths": {
			"~/*": ["./*"]
		}
	},
	"include": [
		"./src/**/*"
	],
}